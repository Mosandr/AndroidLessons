<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_player_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewIconBack"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/circle_background_dark_blue" />


    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        app:srcCompat="@drawable/ic_music_note_orange" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="My Song"
        android:textSize="24sp"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageViewIconBack"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorAccent"
        />
    <ImageView
        android:id="@+id/imageViewPlayBackground"
        android:onClick="playPause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/circle_background_dark_blue" />


    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/ic_play_arrow_orange" />

    <ImageView
        android:id="@+id/imageViewSkipBackBackground"
        android:onClick="previous"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="130dp"
        android:layout_toLeftOf="@id/imageViewPlayBackground"
        android:layout_marginRight="50dp"
        app:srcCompat="@drawable/circle_background_dark_blue" />


    <ImageView
        android:id="@+id/imageViewSkipBack"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_toLeftOf="@id/imageViewPlayBackground"
        android:layout_marginRight="52dp"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/ic_skip_previous_orange" />

    <ImageView
        android:id="@+id/imageViewSkipNextBackground"
        android:onClick="next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="130dp"
        android:layout_toRightOf="@id/imageViewPlayBackground"
        android:layout_marginLeft="50dp"
        app:srcCompat="@drawable/circle_background_dark_blue" />


    <ImageView
        android:id="@+id/imageViewSkipNext"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_toRightOf="@id/imageViewPlayBackground"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/ic_skip_next_orange" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_below="@id/textView"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
